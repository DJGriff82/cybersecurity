<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4"><%= @training_module.title %></h1>

  <% if @training_module.description.present? %>
    <p class="mb-4 text-gray-700"><%= simple_format(@training_module.description) %></p>
  <% end %>

  <% if @training_module.video_url.present? %>
    <div class="mb-6">
      <h2 class="text-lg font-semibold mb-2">Module Video</h2>
      <%= video_tag @training_module.video_url, controls: true, class: "w-full max-w-lg" %>
    </div>
  <% end %>

  <div class="mb-6">
    <h2 class="text-lg font-semibold mb-2">Pages</h2>
    <% if @training_module.module_pages.any? %>
      <ul class="list-disc pl-6 space-y-2">
        <% @training_module.module_pages.order(:position).each do |page| %>
          <li>
            <%= link_to "#{page.position}. #{page.title}",
                        course_training_module_module_page_path(@training_module.course, @training_module, page),
                        class: "text-blue-600 hover:underline" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No pages in this module yet.</p>
    <% end %>
  </div>

  <%= link_to "Back to Course", course_path(@training_module.course),
              class: "bg-gray-600 text-white px-4 py-2 rounded" %>
</div>
