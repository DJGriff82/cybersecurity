<h1>Training Modules for <%= @course.title %></h1>

<%= link_to "New Training Module", new_super_course_training_module_path(@course), class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @training_modules.each do |tm| %>
      <tr>
        <td><%= tm.title %></td>
        <td><%= tm.description %></td>
        <td><%= link_to "Show", super_course_training_module_path(@course, tm) %></td>
        <td><%= link_to "Edit", edit_super_course_training_module_path(@course, tm) %></td>
        <td><%= link_to "Delete", super_course_training_module_path(@course, tm),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
