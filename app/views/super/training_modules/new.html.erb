<div class="container mx-auto px-4 py-8">
  <div class="max-w-xl mx-auto bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Add Training Module</h1>

    <%= form_with(model: [:super, @course, @training_module], local: true) do |form| %>
      <% if @training_module.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2 class="font-bold"><%= pluralize(@training_module.errors.count, "error") %> prohibited this training module from being saved:</h2>
          <ul>
            <% @training_module.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, "Title", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="mb-4">
        <%= form.label :content, "Content", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :content, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :order, "Order", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :order, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to 'Cancel', super_course_path(@course), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= form.submit "Create Training Module", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
