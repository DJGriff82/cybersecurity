<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Courses Management</h1>

  <div class="flex justify-between items-center mb-4">
    <%= link_to "New Course",
                new_super_course_path,
                class: "bg-green-600 text-white px-4 py-2 rounded" %>
  </div>

  <% if @courses.any? %>
    <table class="w-full border border-gray-300 shadow-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="p-2 text-left">Title</th>
          <th class="p-2 text-left">Description</th>
          <th class="p-2 text-left">Difficulty</th>
          <th class="p-2 text-left">Duration</th>
          <th class="p-2 text-left">Status</th>
          <th class="p-2 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr class="border-t">
            <td class="p-2 font-medium"><%= course.title %></td>
            <td class="p-2 text-gray-600"><%= truncate(course.description, length: 60) %></td>
            <td class="p-2"><%= course.difficulty.presence || "Not specified" %></td>
            <td class="p-2"><%= course.duration.present? ? "#{course.duration} minutes" : "Not specified" %></td>
            <td class="p-2">
              <% if course.is_active? %>
                <span class="text-green-600 font-semibold">Active</span>
              <% else %>
                <span class="text-red-600 font-semibold">Inactive</span>
              <% end %>
            </td>
            <td class="p-2 space-x-2">
              <%= link_to "View", super_course_path(course),
                          class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_super_course_path(course),
                          class: "text-yellow-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500">No courses found.</p>
  <% end %>
</div>
