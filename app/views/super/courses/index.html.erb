<h1>Super::Courses#index</h1>

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Courses Management</h1>
    <%= link_to 'New Course', new_super_course_path, class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700' %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Difficulty</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @courses.each do |course| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= course.title %></div>
              <div class="text-sm text-gray-500"><%= truncate(course.description, length: 50) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-semibold rounded-full 
             <%= course.difficulty == 'beginner' ? 'bg-green-100 text-green-800' : 
                 course.difficulty == 'intermediate' ? 'bg-yellow-100 text-yellow-800' : 
                 course.difficulty == 'advanced' ? 'bg-red-100 text-red-800' : 
                 'bg-gray-100 text-gray-800' %>">
  <%= course.difficulty&.titleize || "Not specified" %>
</span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= course.duration %> minutes
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs rounded-full 
                         <%= course.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= course.is_active ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'View', super_course_path(course), class: 'text-blue-600 hover:text-blue-900' %>
              <%= link_to 'Edit', edit_super_course_path(course), class: 'text-yellow-600 hover:text-yellow-900' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
