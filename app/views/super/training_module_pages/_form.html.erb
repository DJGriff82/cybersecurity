<%= form_with(model: [:super, @course, @training_module, @page], local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :title, "Page Title", class: "block font-bold mb-1" %>
    <%= form.text_field :title, class: "w-full border rounded px-2 py-1", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :content, "Content", class: "block font-bold mb-1" %>
    <%= form.text_area :content, rows: 6, class: "w-full border rounded px-2 py-1", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :order, "Order", class: "block font-bold mb-1" %>
    <%= form.number_field :order, class: "w-full border rounded px-2 py-1", required: true %>
  </div>

  <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
