<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto bg-white shadow rounded p-6">
    <h1 class="text-2xl font-bold mb-4"><%= @page.title %></h1>

    <div class="prose mb-6">
      <%= simple_format(@page.content) %>
    </div>

    <% if @page.image.attached? %>
      <div class="mb-6">
        <%= image_tag @page.image, class: "rounded shadow" %>
      </div>
    <% end %>

    <% if @page.video.attached? %>
      <div class="mb-6">
        <%= video_tag url_for(@page.video), controls: true, class: "w-full rounded shadow" %>
      </div>
    <% end %>

    <div class="flex justify-between mt-6">
      <% if @prev_page %>
        <%= link_to "⬅ Previous", course_training_module_module_page_path(@course, @training_module, @prev_page),
                    class: "bg-gray-300 px-4 py-2 rounded" %>
      <% else %>
        <span></span>
      <% end %>

      <% if @next_page %>
        <%= link_to "Next ➡", course_training_module_module_page_path(@course, @training_module, @next_page),
                    class: "bg-blue-600 text-white px-4 py-2 rounded" %>
      <% else %>
        <span class="text-gray-500">End of Module</span>
      <% end %>
    </div>
  </div>
</div>
