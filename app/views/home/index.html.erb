<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<!-- app/views/home/index.html.erb -->
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="text-center text-3xl font-extrabold text-gray-900">
      Cyber Security Training Platform
    </h1>
    <p class="mt-2 text-center text-sm text-gray-600">
      Comprehensive cybersecurity training for your organization
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <% if user_signed_in? %>
        <div class="text-center">
          <p class="text-lg font-medium text-gray-900">Welcome back, <%= current_user.first_name %>!</p>
          <p class="mt-2 text-sm text-gray-600">You are logged in as <%= current_user.role.to_s.titleize %>.</p>
          
          <div class="mt-6 space-y-4">
            <% if current_user.super_user? %>
              <%= link_to 'Super Admin Dashboard', super_root_path, class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500' %>
            <% end %>
            
            <% if current_user.company_admin? || current_user.super_user? %>
              <%= link_to 'Admin Dashboard', admin_root_path, class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
            <% end %>
            
            <%= link_to 'View Courses', courses_path, class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500' %>
            
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
          </div>
        </div>
      <% else %>
        <div class="text-center">
          <p class="text-lg font-medium text-gray-900">Welcome to our Cyber Security Training Platform</p>
          <p class="mt-2 text-sm text-gray-600">Please sign in to access your training materials.</p>
          
          <div class="mt-6 space-y-4">
            <%= link_to 'Sign In', new_user_session_path, class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
            
            <%= link_to 'Sign Up', new_user_registration_path, class: 'w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>